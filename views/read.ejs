<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <div class="container">
    <a class="link" href="/">Back to Home</a>
    <h1 class="title">All Users</h1>
    <div class="users">
      <% if (users.length > 0) { %>
        <% users.forEach(function(user) { %>
          <div class="user">
            <div class="user-image">
              <img class="image" src="<%= user.image %>" alt="<%= user.name %>">
            </div>
            <h3 class="user-name"><%= user.name %></h3>
            <h5 class="user-email"><%= user.email %></h5>
            <div class="user-actions">
              <a class="edit-link" href="/edit/<%= user._id %>">Edit User</a>
              <a class="delete-link" href="/delete/<%= user._id %>">Delete User</a>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <h3 class="no-users">There are no users.</h3>
      <% } %>
    </div>
  </div>
</body>
</html>
